@model UpdateCertificateDto

<div class="section-wrapper">
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <img src="~/images/@Model.Image" style="width:100%; height:100%;" />
            <input asp-for="Image" type="hidden" />
        </div>
        <div class="form-group custom-file">
            <label asp-for="Photo" class="custom-file-label" for="customFile">Choose file</label>
            <input asp-for="Photo" type="file" class="custom-file-input" id="customFile">
            <span asp-validation-for="Photo"></span>
        </div>
        <button type="submit" class="btn btn-outline-success">Update Certificate</button>
    </form>
</div>