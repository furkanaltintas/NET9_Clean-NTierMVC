@model UpdateEducationDto

<div class="section-wrapper">
    <form asp-action="Update" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Degree" class="form-label"></label>
            <input asp-for="Degree" class="form-control">
            <span asp-validation-for="Degree"></span>
        </div>
        <div class="form-group">
            <label asp-for="Department" class="form-label"></label>
            <input asp-for="Department" class="form-control">
            <span asp-validation-for="Department"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="10"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control fc-datepicker hasDatepicker">
            <span asp-validation-for="StartDate"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control fc-datepicker hasDatepicker">
            <span asp-validation-for="EndDate"></span>
        </div>
        <button type="submit" class="btn btn-outline-success">Update Education</button>
    </form>
</div>