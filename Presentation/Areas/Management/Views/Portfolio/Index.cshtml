@model IList<PortfolioViewModel>

<div class="section-wrapper">
    <div class="row">
        @foreach (var portfolio in Model)
        {
            <div class="col-sm-6 col-md-3 mb-4">
                <div class="image-container" style="width:100%; height: 250px; overflow: hidden;">
                    <img src="~/images/@portfolio.Image" class="w-100" alt="@portfolio.SubTitle" style="width:100%; height:100%; object-fit:cover;">
                </div>
                <p>@portfolio.Title | @portfolio.PortfolioCategoryDto.Name</p>
                <a asp-action="Update" asp-route-portfolioId="@portfolio.Id" class="btn btn-primary btn-icon"><div><i class="fa fa-refresh"></i></div></a>
                <a asp-action="Delete" asp-route-portfolioId="@portfolio.Id" class="btn btn-danger btn-icon"><div><i class="fa fa-trash"></i></div></a>
            </div>
        }
    </div>

    <hr />
    <a asp-action="Add" class="btn btn-outline-success btn-icon d-flex align-items-center justify-content-center"
       style="width: -webkit-fill-available; height: 40px;">
        <i class="fa fa-plus"></i>
    </a>
</div>