@model IList<PortfolioViewModel>

<div class="section-wrapper">
    <div class="row">
        @foreach(var portfolio in Model)
        {
            <div class="col-sm-6 col-md-3">
                <img src="https://th.bing.com/th/id/OIP.ctJ-WdTjQtfX5wja4yXZ-gHaH5?rs=1&pid=ImgDetMain" class="img-fluid" alt="@portfolio.SubTitle">
                <p>@portfolio.Title | @portfolio.SubTitle</p>
                <a asp-action="Update" asp-route-portfolioId="@portfolio.Id" class="btn btn-primary btn-icon"><div><i class="fa fa-refresh"></i></div></a>
            </div>
        }
    </div>
</div>