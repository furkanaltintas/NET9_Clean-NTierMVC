@model UpdateServiceDto

<div class="slim-mainpanel">
    <div class="section-wrapper">
        <form asp-action="Update" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="form-label"></label>
                <input asp-for="Icon" class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-success">Update Service</button>
        </form>
    </div>
</div>