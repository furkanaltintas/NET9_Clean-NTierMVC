@model CreateSkillDto

<div class="section-wrapper">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Point" class="form-label"></label>
            <input asp-for="Point" class="form-control">
            <span asp-validation-for="Point"></span>
        </div>
        <button type="submit" class="btn btn-outline-success">Create Skill</button>
    </form>
</div>